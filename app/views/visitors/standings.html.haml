%section#standings
  .container
    .small-12.columns
      %h2
        = "#{@season.year} #{@season.division} #{@season.name} Standings"

      #standings
        %table.responsive
          %thead
            %tr
              %th
              %th Team
              %th GP
              %th W
              %th L
              %th T
              %th OTL
              %th PTS
              %th.hide-for-small GF
              %th.hide-for-small GA
              %th.hide-for-small GD

          %tbody
            - i = 1
            - @data['body'].each do |row|
              - team = split_team_name_and_color(row['Team'])
              %tr{class: team[:name] == @team.name ? 'current-team' : '', "style" => team[:name] == @team.name ? "background-color: #{@team.primary_color};" : '' }
                %td= "#{i}."
                %td= team[:name]
                %td= row['GP']
                %td= row['W']
                %td= row['L']
                %td= row['T']
                %td= row['OTL']
                %td= row['PTS']
                %td.hide-for-small= row['GF']
                %td.hide-for-small= row['GA']
                %td.hide-for-small= row['GD']
                - i += 1